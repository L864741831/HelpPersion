<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/main_di"
    android:layout_height="match_parent"
    >

    <include layout="@layout/top_bar_commom"/>
    <include layout="@layout/top_xian"/>

    <TextView
        android:id="@+id/tv_pay_check_hint"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="83dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#737373"
        android:textSize="13dp"
        android:text="请输入支付密码，验证身份"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="@dimen/dimen_17_dp"
        android:background="@drawable/bg_add_cardssword">

        <EditText
            android:id="@+id/et_addcardpwd_pwd"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:gravity="center_vertical"
            android:hint="请您输入天机卡支付密码"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#bdbdbd"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_addcardpwd_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_inputpwd_nect"
        android:text="确认解绑"
        android:textColor="@color/main_color"
        android:textSize="16dp"
        />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_di"
    tools:context="com.tianjistar.helppersion.activity.persion.MemberInfoActivity">
    <include layout="@layout/top_bar_commom"></include>
    <include layout="@layout/top_xian"></include>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="104dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_member_head"
            android:src="@drawable/ic_head_defout"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_marginStart="20dp" />
        <TextView
            android:id="@+id/tv_member_name"
            android:paddingLeft="@dimen/dimen_20_dp"
            android:layout_gravity="center_vertical"
            android:text="jlmbl"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <TextView
            android:textSize="15sp"
            android:textColor="#030303"
            android:paddingLeft="@dimen/dimen_20_dp"
            android:text="生日"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_member_day"
            android:paddingRight="@dimen/dimen_20_dp"
            android:textSize="15sp"
            android:textColor="#030303"
            android:paddingLeft="@dimen/dimen_20_dp"
            android:text="生日"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp" />
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <TextView
            android:textSize="15sp"
            android:textColor="#030303"
            android:paddingLeft="@dimen/dimen_20_dp"
            android:text="联系方式"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_member_phone"
            android:paddingRight="@dimen/dimen_20_dp"
            android:textSize="15sp"
            android:textColor="#030303"
            android:paddingLeft="@dimen/dimen_20_dp"
            android:text="生日"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp" />
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <TextView
            android:textSize="15sp"
            android:textColor="#030303"
            android:paddingLeft="@dimen/dimen_20_dp"
            android:text="擅长"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_member_good"
            android:paddingRight="@dimen/dimen_20_dp"
            android:textSize="15sp"
            android:textColor="#030303"
            android:paddingLeft="@dimen/dimen_20_dp"
            android:text="生日"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp" />
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <TextView
            android:textSize="15sp"
            android:textColor="#030303"
            android:paddingLeft="@dimen/dimen_20_dp"
            android:text="实名认证"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_member_real"
            android:paddingRight="@dimen/dimen_20_dp"
            android:textSize="15sp"
            android:textColor="#030303"
            android:paddingLeft="@dimen/dimen_20_dp"
            android:text="已认证"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

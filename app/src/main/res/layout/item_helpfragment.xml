<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dimen_10_dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_14_dp"
            android:text="救援单号： 802000000"
            android:textColor="#232326"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_type1"
            android:paddingRight="@dimen/dimen_14_dp"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textColor="@color/main_color"
            android:textSize="13sp"
            android:text="等待施救"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:background="#f8f8f8"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/rl"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_salf_head"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_11_dp"
            android:layout_toRightOf="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tianyou"
                android:text="天佑救援机构(杨金路)"
                android:textSize="14sp"
                android:textColor="#252525"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_type"
                    android:paddingTop="@dimen/dimen_14_dp"
                    android:textSize="13sp"
                    android:textColor="#252525"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="道路救援"/>

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_marginLeft="30dp"
                    android:paddingTop="@dimen/dimen_14_dp"
                    android:textSize="13sp"
                    android:textColor="#838282"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_14_dp"
            android:layout_marginTop="@dimen/dimen_11_dp"
            android:drawableLeft="@drawable/ic_detail"
            android:drawablePadding="@dimen/dimen_5_dp"
            android:text="备注"
            android:textColor="#3e3e41"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="@dimen/dimen_8_dp"
            android:text="备注"
            android:textColor="#8b8b8b"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_p"
            android:layout_marginLeft="@dimen/dimen_14_dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_position"
            android:layout_width="8dp"
            android:layout_height="38dp" />

        <TextView
            android:layout_toRightOf="@+id/iv_p"
            android:id="@+id/tv_position"
            android:layout_centerVertical="true"
            android:textColor="#3e3e41"
            android:textSize="13sp"
            android:text="郑州市"
            android:layout_marginLeft="@dimen/dimen_7_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_map"
            android:paddingLeft="@dimen/dimen_5_dp"
            android:paddingTop="@dimen/dimen_5_dp"
            android:paddingBottom="@dimen/dimen_5_dp"
            android:paddingRight="@dimen/dimen_14_dp"
            android:layout_centerVertical="true"
            android:textColor="#f12b2c"
            android:textSize="10sp"
            android:text="查看地图>>"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_11_dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:visibility="gone"
                android:textSize="13sp"
                android:id="@+id/tv_tv1"
                android:background="@drawable/feelin_bianji"
                android:gravity="center"
                android:textColor="#232326"
                android:text="拍摄"
                android:layout_width="75dp"
                android:layout_height="28dp" />

            <TextView
                android:layout_marginLeft="7dp"
                android:textSize="13sp"
                android:id="@+id/tv_tv2"
                android:background="@drawable/feelin_bianji"
                android:gravity="center"
                android:textColor="#232326"
                android:text="确认到达"
                android:layout_width="75dp"
                android:layout_height="28dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
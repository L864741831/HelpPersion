<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/main_di"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.tianjistar.helppersion.activity.persion.AddCardActivity">

    <include layout="@layout/top_bar_commom"/>

    <include layout="@layout/top_xian"/>

    <LinearLayout
        android:id="@+id/ll_add_bank_card"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_13_dp"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:background="@drawable/bg_edit"
        >

        <TextView
            android:id="@+id/tv_banknoname_one"
            android:textSize="14dp"
            android:textColor="#737373"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请先添加银行卡，"/>

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:text=" 立即添加 >>"
            android:textSize="14dp"
            android:textColor="@color/main_color"
            />

    </LinearLayout>

</LinearLayout>

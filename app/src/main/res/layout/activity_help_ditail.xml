<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_di"
    >
    <include layout="@layout/top_bar_commom"></include>
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="95dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_detail_no"
                android:paddingLeft="@dimen/dimen_15_dp"
                android:text="救援单号：506546454"
                android:textColor="#232326"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_detail_type"
                android:paddingLeft="@dimen/dimen_15_dp"
                android:paddingTop="@dimen/dimen_12_dp"
                android:text="救援类型：506546454"
                android:textColor="#232326"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_detail_time"
                android:paddingLeft="@dimen/dimen_15_dp"
                android:paddingTop="@dimen/dimen_12_dp"
                android:text="呼救时间：506546454"
                android:textColor="#232326"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:id="@+id/tv_jinzhan"
                android:background="@drawable/feelin_bianji"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_17_dp"
                android:layout_alignParentRight="true"
                android:textColor="#232326"
                android:text="救援进展"
                android:layout_width="75dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:textSize="13sp"
                android:id="@+id/tv_cancle"
                android:background="@drawable/feelin_bianji"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_17_dp"
                android:layout_alignParentRight="true"
                android:textColor="#232326"
                android:text="取消订单"
                android:layout_width="75dp"
                android:layout_height="25dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <ImageView
            android:id="@+id/rl"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_salf_head"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_11_dp"
            android:layout_toRightOf="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_tianyou"
                    android:text="天佑救援机构(杨金路)"
                    android:textSize="14sp"
                    android:textColor="#252525"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:id="@+id/tv_type"
                    android:text="正在施救"
                    android:textSize="13sp"
                    android:paddingRight="@dimen/dimen_14_dp"
                    android:textColor="@color/main_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_day"
                android:paddingTop="@dimen/dimen_15_dp"
                android:textSize="13sp"
                android:textColor="#838282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单时间："/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textColor="#3e3e41"
                android:textSize="13sp"
                android:drawablePadding="@dimen/dimen_7_dp"
                android:text="所需物品"
                android:layout_marginLeft="@dimen/dimen_14_dp"
                android:layout_marginTop="@dimen/dimen_11_dp"
                android:drawableLeft="@drawable/ic_wupin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_detail_wu"
                android:textColor="#8b8b8b"
                android:textSize="12sp"
                android:text="备注"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textColor="#3e3e41"
                android:textSize="13sp"
                android:drawablePadding="@dimen/dimen_7_dp"
                android:text="详情"
                android:layout_marginLeft="@dimen/dimen_14_dp"
                android:layout_marginTop="@dimen/dimen_11_dp"
                android:drawableLeft="@drawable/ic_detail_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_detail_detail"
                android:textColor="#8b8b8b"
                android:textSize="12sp"
                android:text="备注"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textColor="#3e3e41"
                android:textSize="13sp"
                android:drawablePadding="@dimen/dimen_7_dp"
                android:text="备注"
                android:layout_marginLeft="@dimen/dimen_14_dp"
                android:layout_marginTop="@dimen/dimen_11_dp"
                android:drawableLeft="@drawable/ic_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_detail"
                android:textColor="#8b8b8b"
                android:textSize="12sp"
                android:text="备注"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="@dimen/dimen_14_dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_position"
            android:layout_width="8dp"
            android:layout_height="38dp" />
        <TextView
            android:id="@+id/tv_position"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="#3e3e41"
            android:textSize="13sp"
            android:text="郑州市郑州市郑州市郑州市郑州市郑州市"
            android:layout_marginLeft="@dimen/dimen_7_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="查看地图>>"
            android:layout_marginLeft="@dimen/dimen_7_dp"
            android:textColor="@color/main_color"
            android:textSize="13sp"
            android:id="@+id/tv_map"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_marginTop="@dimen/dimen_14_dp"
                android:background="#3e3e41"
                android:layout_width="@dimen/dimen_25_dp"
                android:layout_height="@dimen/dimen_0.5_dp" />
            <TextView
                android:paddingLeft="@dimen/dimen_9_dp"
                android:paddingRight="@dimen/dimen_9_dp"
                android:paddingTop="@dimen/dimen_8_dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="#3e3e41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与救援人员"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_14_dp"
                android:background="#3e3e41"
                android:layout_width="@dimen/dimen_25_dp"
                android:layout_height="@dimen/dimen_0.5_dp" />
        </LinearLayout>

        <GridView
            android:numColumns="5"
            android:horizontalSpacing="8dp"
            android:id="@+id/gv"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </GridView>
    </LinearLayout>
</LinearLayout>

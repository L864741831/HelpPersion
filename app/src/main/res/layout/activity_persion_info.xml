<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/main_di"
    android:layout_height="match_parent"
    tools:context="com.tianjistar.helppersion.activity.persion.PersionInfoActivity">

    <include layout="@layout/top_bar_commom_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_info_head"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:text="头像设置"
                    android:textColor="#030303"
                    android:textSize="15dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_info_head"
                    android:layout_marginRight="@dimen/dimen_19_dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_head_defout"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:layout_width="@dimen/dimen_50_dp"
                    android:layout_height="@dimen/dimen_50_dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e1e1e1"/>

            <RelativeLayout
                android:id="@+id/rl_info_sex"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white">

                <TextView
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="#030303"

                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_info_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:text="点击选择"
                    android:textColor="#666666"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_persion_next"
                    android:layout_width="52dp"
                    android:layout_height="52dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e1e1e1"/>

            <RelativeLayout
                android:id="@+id/rl_info_xue"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white">

                <TextView
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="血型"
                    android:textColor="#030303"
                    android:textSize="15dp" />

                <TextView
                    android:gravity="right"
                    android:id="@+id/tv_info_xue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:hint="点击选择"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_persion_next"
                    android:layout_width="52dp"
                    android:layout_height="52dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e1e1e1"/>

            <RelativeLayout
                android:id="@+id/rl_info_day"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white">

                <TextView
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="生日"
                    android:textColor="#030303"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_info_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:hint="点击选择"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_persion_next"
                    android:layout_width="52dp"
                    android:layout_height="52dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e1e1e1"/>

            <RelativeLayout
                android:id="@+id/rl_info_phone"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white">

                <TextView
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系方式"
                    android:textColor="#030303"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_info_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:enabled="false"
                    android:hint="点击输入"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_persion_next"
                    android:layout_width="52dp"
                    android:layout_height="52dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e1e1e1"/>

            <RelativeLayout
                android:id="@+id/rl_info_name"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:text="昵称"
                    android:textColor="#030303"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:hint="点击输入"
                    android:textColor="#666666"
                    android:textSize="13dp"
                    />

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_persion_next"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_info_role"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:background="@color/white">
                <TextView
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="角色"
                    android:textColor="#030303"
                    android:textSize="15sp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_info_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:hint=""
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e1e1e1"/>
            <RelativeLayout
                android:id="@+id/rl_info_prise"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white">
                <TextView
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="证书"
                    android:textColor="#030303"
                    android:textSize="15sp" />
                <EditText
                    android:inputType="phone"
                    android:background="@null"
                    android:singleLine="true"
                    android:id="@+id/et_info_prise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_info_good"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white">
                <TextView
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="擅长"
                    android:textColor="#030303"
                    android:textSize="15sp" />
                <EditText
                    android:inputType="phone"
                    android:background="@null"
                    android:singleLine="true"
                    android:id="@+id/et_info_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e1e1e1"/>

            <RelativeLayout
                android:id="@+id/rl_info_realname"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:text="实名认证"
                    android:textColor="#030303"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_info_real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="36dp"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_persion_next"
                    android:layout_width="52dp"
                    android:layout_height="52dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>

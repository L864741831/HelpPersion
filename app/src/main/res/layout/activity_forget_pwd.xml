<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    android:orientation="vertical"
    >
    <include layout="@layout/top_bar_commom"></include>
    <TextView
        android:layout_marginTop="37dp"
        android:layout_marginLeft="@dimen/dimen_24_dp"
        android:textSize="17sp"
        android:textColor="#251919"
        android:text="忘记登录密码？"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="9dp"
        android:layout_marginLeft="@dimen/dimen_24_dp"
        android:textSize="23sp"
        android:textColor="#251919"
        android:text="请输入要找回的天佑账号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/dimen_24_dp"
        android:textSize="12sp"
        android:textColor="#251919"
        android:text="天佑账号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.tianjistar.helppersion.view.widget.ClearEditText
        android:inputType="phone"
        android:id="@+id/et_forget_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:hint="请输入手机号"
        android:paddingLeft="24dp"
        android:paddingRight="21dp"
        android:textColor="@color/login_see"
        android:textColorHint="@color/login_hint"
        android:background="@null"
        android:textSize="16sp"
        />
    <View
        android:layout_marginRight="@dimen/dimen_24_dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_24_dp"
        android:background="@color/login_xian"/>
    <TextView
        android:layout_marginTop="19dp"
        android:layout_marginLeft="@dimen/dimen_24_dp"
        android:textSize="12sp"
        android:textColor="#251919"
        android:text="验证码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tianjistar.helppersion.view.widget.ClearEditText
            android:id="@+id/et_forget_yzm"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="21dp"
            android:layout_marginRight="45dp"
            android:textColor="@color/login_see"
            android:textColorHint="@color/login_hint"
            android:textSize="16sp"/>
        <TextView
            android:padding="@dimen/dimen_5_dp"
            android:background="@drawable/tv_bg_yzm"
            android:textSize="12sp"
            android:textColor="#f02b2b"
            android:id="@+id/tv_forget_get_yzm"
            android:layout_marginRight="@dimen/dimen_21_dp"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:layout_marginTop="@dimen/dimen_15_dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    </RelativeLayout>
    <View
        android:layout_marginRight="@dimen/dimen_24_dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_24_dp"
        android:background="@color/login_xian"/>
    <Button
        android:id="@+id/btn_forget_sure"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="确定"
        android:alpha="0.5"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/add_card_next"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/main_di"
    android:layout_height="match_parent"
    >
    <include layout="@layout/top_bar_commom"></include>
    <include layout="@layout/top_xian"></include>
    <TextView
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="83dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#737373"
        android:textSize="13sp"
        android:text="请设置天佑支付密码，用于支付验证"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="@dimen/dimen_17_dp"
        android:background="@drawable/bg_add_cardssword">

        <EditText
            android:id="@+id/et_set_pwd"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:gravity="center_vertical"
            android:hint="请输入天佑支付密码"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#bdbdbd"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:id="@+id/bt_set_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_inputpwd_nect"
        android:text="下一步"
        android:textColor="@color/main_color"
        android:textSize="16sp"

        />
</LinearLayout>

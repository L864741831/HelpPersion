<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_di"
    >

    <include layout="@layout/top_bar_commom"/>
    <include layout="@layout/top_xian"/>

    <TextView
        android:paddingTop="@dimen/dimen_15_dp"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:textSize="15dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:textColor="#888888"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请填写相关信息"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dp">
        <TextView
            android:paddingLeft="@dimen/dimen_15_dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"/>
        <EditText
            android:id="@+id/et_forgetpaypwd_name"
            android:textColor="@color/login_see"
            android:textColorHint="#a9a9a9"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/add_card_cursor"
            android:background="@null"
            android:lines="1"
            android:layout_marginLeft="@dimen/dimen_96_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入完整的姓名"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="#e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp" />
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dp">
        <TextView
            android:paddingLeft="@dimen/dimen_15_dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"/>
        <TextView
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/dimen_96_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="身份证"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="#e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp" />
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44_dp">
        <TextView
            android:paddingLeft="@dimen/dimen_15_dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证件号"/>
        <EditText
            android:id="@+id/et_forgetpaypwd_num"
            android:textColor="@color/login_see"
            android:textColorHint="#a9a9a9"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/add_card_cursor"
            android:background="@null"
            android:lines="1"
            android:digits="0123456789xX"
            android:maxLength="18"
            android:layout_marginLeft="@dimen/dimen_96_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入证件号"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/dimen_15_dp"
        android:background="#e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dp" />
    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="47.5dp">
        <TextView
            android:paddingLeft="@dimen/dimen_15_dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"/>
        <EditText
            android:id="@+id/et_forgetpaypwd_phone"
            android:textColor="@color/login_see"
            android:textColorHint="#a9a9a9"
            android:layout_centerVertical="true"
            android:textCursorDrawable="@drawable/add_card_cursor"
            android:background="@null"
            android:lines="1"
            android:inputType="number"
            android:maxLength="11"
            android:layout_marginLeft="@dimen/dimen_96_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入银行预留手机号"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="下一步"
        android:alpha="0.5"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="51dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/add_card_next"/>

</LinearLayout>
